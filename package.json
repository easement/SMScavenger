{
  "name": "smscavenger",
  "version": "1.0.0",
  "description": "A lightweight, text-based scavenger hunt game using Twilio. Players receive clues one at a time via SMS, submit answers, and receive immediate feedback. The app supports hints, enforces clue order, and offers an on-demand, low-friction game experienceâ€”no sign-up required.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:load": "artillery run tests/load/loadTest.ts",
    "test:load:dev": "artillery run tests/load/loadTest.ts -e development",
    "test:load:prod": "artillery run tests/load/loadTest.ts -e production",
    "test:load:report": "artillery report artillery_report.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/easement/SMScavenger.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/easement/SMScavenger/issues"
  },
  "homepage": "https://github.com/easement/SMScavenger#readme",
  "dependencies": {
    "@types/sequelize": "^4.28.20",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "twilio": "^4.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "artillery": "^2.0.3",
    "artillery-plugin-metrics-by-endpoint": "^1.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.13.2",
    "prettier": "^3.2.5",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
